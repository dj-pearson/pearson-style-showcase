{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,  // Enabled: Full type safety
    "noUnusedLocals": true,  // Enabled: Catch unused variables
    "noUnusedParameters": false,  // Keep disabled for callbacks/event handlers
    "noFallthroughCasesInSwitch": true,  // Enabled: Prevent switch statement bugs

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
